@{
    bool esVistaGrafico = ViewBag.EsVistaGrafico as bool? ?? false;
}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - SistemaMerck</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/SistemaMerck.styles.css" asp-append-version="true" />
        <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto&display=swap">

    </head>
    <body>
        <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style='background-color: @ViewBag.ColorNav'>
                <div class="container-fluid navbar-brand d-flex justify-content-center align-items-center">
                    <!-- Logotipo -->
                    <a asp-area="" asp-controller="Home" asp-action="Bienvenida">
                        <img src="~/Imagen/logo.png" alt="Merck Logo" height="30" />
                    </a>

                    <!-- Botón de menú hamburguesa -->
                    <button class="navbar-toggler justify-content-end align-items-end" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <!-- Elementos de navegación -->
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                        <ul class="navbar-nav flex-grow-1">
                            <!-- Enlace de bienvenida -->
                            <li class="nav-item">
                                <a class="navbar-brand nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Bienvenida">Inicio</a>
                            </li>
                            <!-- Puedes agregar más enlaces aquí según sea necesario -->
                        </ul>
                    </div>
                </div>
            </nav>
        </header>


        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/google-analytics.js" asp-append-version="true"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
        <!-- Google tag (gtag.js) -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-QP7QV87FT1"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag() { dataLayer.push(arguments); }
            gtag('js', new Date());

            gtag('config', 'G-QP7QV87FT1');
        </script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
