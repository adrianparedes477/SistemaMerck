@model SistemaMerck.Modelos.ViewModels.UsuarioVM
@{
    ViewData["Title"] = "Pantalla2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="pantalla2-container pantalla2Body">
    <!-- Contenido de la vista -->

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2 text-center">
                <p class="reserva-texto text-white font-family-roboto fs-4">EDAD ACTUAL: @Model.EdadActual</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 offset-md-2 text-center">
                <p class="reserva-texto text-white font-family-roboto fs-4">1ERA MENSTRUACIÓN: @Model.EdadPrimeraMentruacion</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 offset-md-2 text-center">
                <a asp-controller="Indicador" asp-action="Indicador" class="btn btn-primary btn-lg mt-3">Quiero Saber más!</a>
            </div>
        </div>
    </div>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <!-- Contenido del gráfico -->
                <div class="card" style="background-color: #fdddca; padding: 30px;">
                    <canvas id="reservaOvaricaChart" style="max-width: 100%;"></canvas>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Obtener el valor real de ReservaOvarica desde el modelo
        var reservaOvarica = @Html.Raw(Json.Serialize(Model.ReservaOvarica));
        var ctx = document.getElementById('reservaOvaricaChart').getContext('2d');
        var reservaOvaricaChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Categoria1', 'Categoria2', 'Categoria3', 'Categoria4', 'Categoria5'],
                datasets: [{
                    label: 'Reserva Ovárica',
                    data: [10, 20, 30, 40, 50], // Ejemplo de datos, reemplazar con tus datos reales
                    borderColor: '#666666',
                    backgroundColor: 'transparent',
                    pointRadius: 4
                }, {
                    label: 'Resultado Usuario',
                    data: [{
                        x: 2, // Ejemplo, reemplazar con el índice correspondiente a tu valor real
                        y: reservaOvarica,
                        radius: 8,
                        backgroundColor: 'red',
                        borderColor: 'red'
                    }],
                    borderColor: 'red',
                    backgroundColor: 'red',
                    pointRadius: 8,
                    pointStyle: 'circle'
                }]
            },
            options: {
                title: {
                    display: true,
                    text: 'Resultado de Reserva Ovárica'
                },
                scales: {
                    xAxes: [{
                        scaleLabel: {
                            display: true,
                            labelString: 'Fecha'
                        }
                    }],
                    yAxes: [{
                        scaleLabel: {
                            display: true,
                            labelString: 'Reserva Ovárica'
                        }
                    }]
                },
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                },
                responsive: true,
                maintainAspectRatio: false,
                aspectRatio: 2,
                layout: {
                    padding: {
                        top: 10,
                        bottom: 10
                    }
                },
                elements: {
                    line: {
                        fill: true
                    }
                }
            }
        });
    </script>
</body>












