@model SistemaMerck.Modelos.ViewModels.UsuarioVM
@{
    ViewData["Title"] = "Pantalla2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body class="pantalla2-container">
    <div class="container">
        <div class="row text-center">
            <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1 col-sm-12">
                <p class="text-white font-family-roboto fs-4">EDAD ACTUAL: @Model.EdadActual</p>
                <p class="text-white font-family-roboto fs-4">1ERA MENSTRUACIÓN: @Model.EdadPrimeraMentruacion</p>
                <a asp-controller="Indicador" asp-action="Indicador" class="btn btn-primary btn-lg mt-3">Quiero Saber más!</a>
            </div>
        </div>
        
    </div>
    <div style="height:20px;background-color:#fdddca;border-top-left-radius:110px;border-top-right-radius:110px;">
    </div>
    <div class="container-fluid mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <!-- Contenido del gráfico -->
                <div class="card chart-container">
                    <canvas id="reservaOvaricaChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Obtener el valor real de ReservaOvarica desde el modelo
        var reservaOvarica = @Html.Raw(Json.Serialize(Model.ReservaOvarica));
        var ctx = document.getElementById('reservaOvaricaChart').getContext('2d');
        var reservaOvaricaChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Categoria1', 'Categoria2', 'Categoria3', 'Categoria4', 'Categoria5'],
                datasets: [{
                    label: 'Reserva Ovárica',
                    data: [10, 20, 30, 40, 50],
                    borderColor: '#666666',
                    backgroundColor: '#666666', 
                    pointRadius: 4
                }, {
                    label: 'Resultado Usuario',
                    data: [{
                        x: 2,
                        y: reservaOvarica,
                        radius: 8,
                        backgroundColor: 'red',
                        borderColor: 'red'
                    }],
                    borderColor: 'red',
                    backgroundColor: 'red',
                    pointRadius: 8,
                    pointStyle: 'circle'
                }]
            },
            options: {
                title: {
                    display: true,
                    text: 'Resultado de Reserva Ovárica'
                },
                scales: {
                    xAxes: [{
                        scaleLabel: {
                            display: true,
                            labelString: 'Fecha'
                        },
                        ticks: {
                            fontSize: 12
                        }
                    }],
                    yAxes: [{
                        scaleLabel: {
                            display: true,
                            labelString: 'Reserva Ovárica'
                        },
                        ticks: {
                            fontSize: 12
                        }
                    }]
                },
                plugins: {
                    legend: {
                        display: true,
                        position: 'bottom'
                    }
                },
                responsive: true,
                maintainAspectRatio: false,
                aspectRatio: '1.0',
                elements: {
                    point: {
                        radius: 6
                    }
                }
            }
        });
    </script>
</body>
