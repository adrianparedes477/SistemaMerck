@model SistemaMerck.Modelos.ViewModels.FormularioViewModel
@using SistemaMerck.Modelos;

@{
    ViewData["Title"] = "MostrarFormulario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="pantalla5">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <div class="titulo-formulario mb-4">
                    <a href="javascript:history.back()" class="btn">
                        <i class="bi bi-caret-left"></i>
                    </a>

                    <span class="h4">Formulario</span>

                    <!-- Enlace para avanzar -->
                    <a href="#" class="btn">
                        <i class="bi bi-caret-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-5">
        <form id="filtroForm" method="post" asp-controller="Formulario" asp-action="MostrarFormulario" class="mt-4">
            <div class="row">
                <div class="col-md-6">
                    <!-- Selector de País -->
                    <div class="form-group">
                        <label asp-for="PaisSeleccionado">País:</label>
                        <select asp-for="PaisSeleccionado" asp-items="new SelectList(Model.ListPaises, nameof(Pais.Nombre), nameof(Pais.Nombre))" class="form-control">
                            <option value="">Selecciona una opción</option>
                        </select>
                    </div>

                    <!-- Selector de Provincia -->
                    <div class="form-group">
                        <label asp-for="ProvinciaSeleccionada">Provincia:</label>
                        <select asp-for="ProvinciaSeleccionada" asp-items="new SelectList(Model.ListProvincia, nameof(Provincias.Provincia), nameof(Provincias.Provincia))" class="form-control" id="Provincia" onchange="capturarProvinciaSeleccionada(this)">
                            <option value="">Selecciona una opción</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-6">
                    <!-- Selector de Localidad -->
                    <div class="form-group">
                        <label asp-for="LocalidadSeleccionada">Localidad:</label>
                        <select asp-for="LocalidadSeleccionada" asp-items="new SelectList(Model.ListLocalidad, nameof(Localidades.Localidad), nameof(Localidades.Localidad))" class="form-control">
                            <option value="">Selecciona una opción</option>
                        </select>
                    </div>

                    <!-- Selector de Tipo de Consulta -->
                    <div class="form-group">
                        <label asp-for="TipoConsultaSeleccionado">Tipo de Consulta:</label>
                        <select asp-for="TipoConsultaSeleccionado" asp-items="new SelectList(Model.ListTiposConsulta, nameof(TipoConsulta.Consulta), nameof(TipoConsulta.Consulta))" class="form-control">
                            <option value="">Selecciona una opción</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <!-- Correo -->
                    <div class="form-group">
                        <label asp-for="Correo">Correo:</label>
                        <input asp-for="Correo" class="form-control" />
                    </div>
                </div>
            </div>

            <input id="ClinicaSeleccionada" name="LocacionSeleccionada" hidden class="form-control" asp-for="LocacionSeleccionada" readonly />

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Enviar</button>
            </div>
        </form>
    </div>

    <div class="container mt-4">
        <div class="row" id="locacionesList">
            @if (Model.LocacionesFiltradas != null && Model.LocacionesFiltradas.Any())
            {
                @foreach (var locacion in Model.LocacionesFiltradas)
                {
                    <div class="col-12 col-md-4 mb-2">
                        <div class="p-3 border rounded locacion-item">
                            <p class="mb-0">@locacion.Nombre</p>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="alert alert-info text-center">No hay locaciones disponibles.</div>
                </div>
            }
        </div>
    </div>

    <script src="~/js/formulario.js"></script>
</body>



